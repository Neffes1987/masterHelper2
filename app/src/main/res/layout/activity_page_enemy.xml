<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ux.pages.events.subPages.PageEnemy">

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.appBar.ComponentUIAppBar"
    android:id="@+id/ENEMY_EDITOR_APP_BAR"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout="@layout/fragment_component_ui_app_bar"/>

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.image.ComponentUIImage"
    android:id="@+id/ENEMY_EDITOR_PREVIEW_ID"
    app:layout_constraintTop_toBottomOf="@+id/ENEMY_EDITOR_APP_BAR"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout="@layout/fragment_component_ui_image"/>

  <fragment
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.masterhelper.ux.components.library.list.ComponentUIList"
    android:id="@+id/ENEMY_EDITOR_CHARACTERISTIC_LIST"
    tools:layout="@layout/fragment_component_ui_list"
    app:layout_constraintTop_toBottomOf="@+id/ENEMY_EDITOR_PREVIEW_ID"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout4"/>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/linearLayout4"
    android:baselineAligned="false">

    <fragment
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.components.library.buttons.icon.ComponentUIImageButton"
      android:id="@+id/ENEMY_EDITOR_DELETE_CONTROL_ID"
      android:layout_weight="1"
      tools:layout="@layout/fragment_component_ui_image_button"/>

    <fragment
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.components.library.buttons.icon.ComponentUIImageButton"
      android:id="@+id/ENEMY_EDITOR_ADD_CHARACTERISTIC_CONTROL_ID"
      android:layout_weight="1"
      tools:layout="@layout/fragment_component_ui_image_button"/>

    <fragment
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.components.library.buttons.icon.ComponentUIImageButton"
      android:id="@+id/ENEMY_EDITOR_SAVE_CONTROL_ID"
      android:layout_weight="1"
      tools:layout="@layout/fragment_component_ui_image_button"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>