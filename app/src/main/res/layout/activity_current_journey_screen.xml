<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".screens.journey.CurrentScreen">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/linearLayout">

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.ActsFragment"
      android:id="@+id/JOURNEY_ACTS_FRAGMENT_ID"
      android:layout_weight="0"
      tools:layout="@layout/fragment_acts"/>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.list.ListFragment"
      android:id="@+id/JOURNEY_PLOTS_LIST_FRAGMENT_ID"
      android:layout_weight="1"
      tools:layout="@layout/fragment_item_list"/>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.BottomNavigationBlock"
      android:id="@+id/fragmentContainerView"
      tools:layout="@layout/fragment_bottom_navigation_block"
      android:layout_weight="0"/>

  </LinearLayout>

  <androidx.fragment.app.FragmentContainerView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.UIAddButtonFragment"
    android:id="@+id/JOURNEY_ADD_PLOT_FRAGMENT_ID"
    android:layout_weight="0"
    tools:layout="@layout/fragment_ui_add_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="64dp"
    android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>