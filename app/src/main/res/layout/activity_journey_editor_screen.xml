<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".screens.journey.JourneyEditorScreen">

  <androidx.fragment.app.FragmentContainerView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.ApplyButtonFragment"
    android:id="@+id/APPLY_BUTTON_FRAGMENT_ID"
    tools:layout="@layout/fragment_apply_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/APPLY_BUTTON_FRAGMENT_ID"
    app:layout_constraintVertical_bias="0.0">

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.PropertyBarFragment"
      android:id="@+id/JOURNEY_TITLE_FRAGMENT_ID"
      tools:layout="@layout/fragment_property_bar"/>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.PropertyBarFragment"
      android:id="@+id/JOURNEY_THEME_FRAGMENT_ID"
      tools:layout="@layout/fragment_property_bar"/>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.PropertyBarFragment"
      android:id="@+id/JOURNEY_RESTRICTIONS_FRAGMENT_ID"
      tools:layout="@layout/fragment_property_bar"/>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.PropertyBarFragment"
      android:id="@+id/JOURNEY_TIMELINE_FRAGMENT_ID"
      tools:layout="@layout/fragment_property_bar"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>