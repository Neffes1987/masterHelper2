<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".screens.NamesGenerator">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent">

    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/NAMES_GENERATOR_INPUT_FIELD_ID"
        android:layout_weight="1"/>

      <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/reorder"
        android:id="@+id/NAMES_GENERATOR_FILTERS_BTN_ID"
        android:layout_weight="0"/>
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      tools:visibility="gone"
      android:id="@+id/NAMES_GENERATOR_FILTERS_BLOCK_ID">

      <TextView
        android:text="@string/names_generator_filters_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>

      <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NAMES_GENERATOR_GROUPS_ID">

        <RadioButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_NICKS_ID"
          android:checked="true"
          tools:text="@string/names_generator_group_nicks"
          android:text="@string/names_generator_group_nicks"/>

        <RadioButton
          android:text="@string/names_generator_group_dnd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_DND_ID"/>

        <RadioButton
          android:text="@string/names_generator_group_rpg"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_RPG_ID"/>

        <RadioButton
          android:text="@string/names_generator_group_players"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_PLAYERS_ID"/>

        <RadioButton
          android:text="@string/names_generator_group_elfs"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_ELFS_ID"/>

        <RadioButton
          android:text="@string/names_generator_group_fantasy"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_FANTASY_ID"/>

        <RadioButton
          android:text="@string/names_generator_group_clans"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_CLANS_ID"/>

        <RadioButton
          android:text="@string/names_generator_group_heros"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GROUP_HEROS_ID"/>
      </RadioGroup>

      <TextView
        android:text="@string/names_generator_gender_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"/>

      <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NAMES_GENERATOR_GENDER_ID">

        <RadioButton
          android:text="@string/names_generator_gender_male"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GENDER_MALE_ID"
          android:checked="true"/>

        <RadioButton
          android:text="@string/names_generator_gender_female"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/NAMES_GENERATOR_GENDER_FEMALE_ID"/>
      </RadioGroup>

      <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.masterhelper.ux.ApplyButtonFragment"
        android:id="@+id/NAMES_GENERATOR_APPLY_FILTERS_BTN_ID"
        tools:layout="@layout/fragment_apply_button"/>

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:name="com.masterhelper.ux.list.ListFragment"
      android:id="@+id/NAMES_GENERATOR_LIST_ID"
      tools:layout="@layout/fragment_item_list"/>

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>