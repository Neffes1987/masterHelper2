<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ux.pages.encounter.PageEncounterEnimiesList">

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.appBar.ComponentUIAppBar"
    android:id="@+id/ENCOUNTER_APP_BAR"
    tools:layout="@layout/fragment_component_ui_app_bar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <fragment
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.masterhelper.ux.components.library.list.ComponentUIList"
    android:id="@+id/ENCOUNTER_ENEMIES_LIST_ID"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ENCOUNTER_APP_BAR"
    tools:layout="@layout/fragment_component_ui_list"
    app:layout_constraintBottom_toBottomOf="parent"/>

  <fragment
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.buttons.floating.ComponentUIFloatingButton"
    android:id="@+id/ENCOUNTER_ADD_NEW_ENIMY_ID"
    tools:layout="@layout/fragment_component_ui_floating_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/ENCOUNTER_ENEMIES_LIST_ID"/>

  <fragment
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.buttons.floating.ComponentUIFloatingButton"
    android:id="@+id/ENCOUNTER_START_MUSIC_ID"
    tools:layout="@layout/fragment_component_ui_floating_button"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>