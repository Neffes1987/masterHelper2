<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".ux.list.propertyBar.PropertyBarFragment">

  <!-- TODO: Update blank fragment layout -->
  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/accentWhite"
    android:id="@+id/PROPERTY_CARD_ID"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="4dp"
      android:id="@+id/Linearid">

      <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
          android:text="TextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/PROPERTY_LABEL_ID"
          android:layout_marginLeft="4dp"
          android:textColor="@color/primary"/>

        <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
            android:src="@drawable/ic_launcher_background"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/PROPERTY_PREVIEW_ID"
            android:layout_weight="0"
            android:scaleType="fitCenter"
            tools:visibility="visible"
            android:visibility="visible"
            android:padding="2dp"/>

          <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_weight="1">

            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PROPERTY_TITLE_ID"
                android:layout_weight="1"
                android:textColor="@color/primary"/>

            </LinearLayout>

            <LinearLayout
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                android:text="Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PROPERTY_DESCRIPTION_ID"
                android:layout_weight="1"
                android:textColor="@color/primary"/>
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>

      </LinearLayout>

      <ImageButton
        android:src="@mipmap/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PROPERTY_EDIT_BTN_ID"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"/>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</FrameLayout>