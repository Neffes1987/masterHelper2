<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".goals.PageGoal">

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.appBar.ComponentUIAppBar"
    android:id="@+id/GOAL_APP_BAR"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout="@layout/fragment_component_ui_app_bar"
    app:layout_constraintEnd_toEndOf="parent"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/GOAL_MUSIC_PLAYER_ID"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/GOAL_TABS_BAR_ID"
    app:layout_constraintVertical_bias="0.0"
    tools:visibility="gone">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/GOAL_EDIT_CONTAINER_ID">

      <TextView
        android:text="@string/goal_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"/>

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textPersonName"
        android:ems="10"
        android:id="@+id/GOAL_EDIT_NAME_FIELD_ID"/>

      <TextView
        android:text="@string/goal_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="8dp"/>

      <MultiAutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GOAL_EDIT_DESCRIPTION_FIELD_ID"/>

    </LinearLayout>
  </ScrollView>

  <com.google.android.material.tabs.TabLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
    android:id="@+id/GOAL_TABS_BAR_ID"
    app:layout_constraintStart_toStartOf="parent">

    <com.google.android.material.tabs.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/goal_meta"/>

    <com.google.android.material.tabs.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:icon="@mipmap/pencil"/>

  </com.google.android.material.tabs.TabLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/linearLayout2"
    style="@style/row_layout"
    app:layout_constraintTop_toBottomOf="@+id/GOAL_APP_BAR">

    <fragment
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:name="com.masterhelper.ux.components.library.text.label.ComponentUILabel"
      android:id="@+id/GOAL_ASSIGNED_LOCATION_ID"
      android:layout_weight="1"
      tools:layout="@layout/fragment_component_ui_label"/>

    <fragment
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.components.library.buttons.icon.ComponentUIImageButton"
      android:id="@+id/GOAL_ASSIGN_LOCATION_BTN_ID"
      android:layout_weight="0"
      tools:layout="@layout/fragment_component_ui_image_button"/>
  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/GOAL_TABS_BAR_ID"
    android:id="@+id/GOAL_VIEW_CONTAINER_ID"
    app:layout_constraintBottom_toTopOf="@+id/GOAL_MUSIC_PLAYER_ID"
    android:visibility="visible"
    app:layout_constraintVertical_bias="0">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <fragment
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:name="com.masterhelper.ux.components.library.image.ComponentUIImage"
        android:id="@+id/GOAL_ATTACHED_LOCATION_PREVIEW_ID"
        tools:layout="@layout/fragment_component_ui_image"
        />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/GOAL_DESCRIPTION_ID"/>

    </LinearLayout>
  </ScrollView>

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.media.music_player.ComponentUiMusicWidget"
    android:id="@+id/GOAL_MUSIC_PLAYER_ID"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:layout="@layout/fragment_component_ui_music_widget"/>

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:srcCompat="@mipmap/done"
    android:id="@+id/GOAL_APPLY_BTN"
    app:layout_constraintBottom_toTopOf="@+id/GOAL_MUSIC_PLAYER_ID"
    style="@style/float_button_styles"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>