<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".goals.PageGoal">

  <fragment
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.appBar.ComponentUIAppBar"
    android:id="@+id/GOAL_APP_BAR"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:layout="@layout/fragment_component_ui_app_bar"
    app:layout_constraintEnd_toEndOf="parent"/>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/linearLayout2"
    style="@style/row_layout"
    app:layout_constraintTop_toBottomOf="@+id/GOAL_APP_BAR">

    <fragment
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:name="com.masterhelper.ux.components.library.text.label.ComponentUILabel"
      android:id="@+id/GOAL_ASSIGNED_LOCATION_ID"
      android:layout_weight="1"
      tools:layout="@layout/fragment_component_ui_label"/>

    <fragment
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.components.library.buttons.icon.ComponentUIImageButton"
      android:id="@+id/GOAL_ASSIGN_LOCATION_BTN_ID"
      android:layout_weight="0"
      tools:layout="@layout/fragment_component_ui_image_button"/>
  </LinearLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <fragment
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:name="com.masterhelper.ux.components.library.image.ComponentUIImage"
        android:id="@+id/GOAL_ATTACHED_LOCATION_PREVIEW_ID"
        tools:layout="@layout/fragment_component_ui_image"
        />

      <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.masterhelper.ux.components.library.text.label.ComponentUILabel"
        android:id="@+id/GOAL_DESCRIPTION_ID"
        tools:layout="@layout/fragment_component_ui_label"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />
    </LinearLayout>
  </ScrollView>

  <fragment
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.components.library.buttons.floating.ComponentUIFloatingButton"
    android:id="@+id/GOAL_EDIT_ID"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:layout="@layout/fragment_component_ui_floating_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>