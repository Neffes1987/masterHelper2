<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".ux.ActsFragment">

  <!-- TODO: Update blank fragment layout -->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/accentWhite">

    <ImageButton
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:id="@+id/JOURNEY_PREV_ACT_BUTTON_ID"
      android:layout_weight="0"
      android:rotation="90"
      style="@style/text.caption.secondary"
      android:src="@mipmap/arrow_down"/>

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/JOURNEY_CURRENT_ACT_BUTTON_ID"
      android:layout_weight="1"
      style="@style/text.caption.secondary"/>

    <ImageButton
      android:layout_width="50dp"
      android:layout_height="match_parent"
      android:id="@+id/JOURNEY_NEXT_ACT_BUTTON_ID"
      android:layout_weight="0"
      android:rotation="-90"
      style="@style/text.caption.secondary"
      android:src="@mipmap/arrow_down"/>
  </LinearLayout>

</FrameLayout>