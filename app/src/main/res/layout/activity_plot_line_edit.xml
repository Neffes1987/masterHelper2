<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".screens.plotTwist.PlotTwistEditScreen">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/APPLY_BUTTON_FRAGMENT_ID">

    <androidx.fragment.app.FragmentContainerView
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.list.propertyBar.PropertyBarFragment"
      android:id="@+id/PLOT_TITLE_FRAGMENT_ID"
      tools:layout="@layout/fragment_property_bar"
      android:layout_width="match_parent"/>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.list.propertyBar.PropertyBarFragment"
      android:id="@+id/PLOT_DESCRIPTION_FRAGMENT_ID"
      tools:layout="@layout/fragment_property_bar"/>

    <androidx.fragment.app.FragmentContainerView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:name="com.masterhelper.ux.list.propertyBar.PropertyBarFragment"
      android:id="@+id/PLOT_DEADLINE_FRAGMENT_ID"
      tools:layout="@layout/fragment_property_bar"/>
  </LinearLayout>

  <androidx.fragment.app.FragmentContainerView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:name="com.masterhelper.ux.ApplyButtonFragment"
    android:id="@+id/APPLY_BUTTON_FRAGMENT_ID"
    tools:layout="@layout/fragment_apply_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>