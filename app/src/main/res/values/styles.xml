<resources>

  <style name="DefaultScreenTheme" parent="Platform.MaterialComponents.Light">
    <item name="backgroundColor">@color/accentLightGray</item>
  </style>

  <style name="NoActionBarTheme" parent="DefaultScreenTheme">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">false</item>
  </style>

  <style name="text">
    <item name="android:textColor">@color/accentDarkBlue</item>
  </style>

  <style name="text.title">
    <item name="android:textSize">28sp</item>
    <item name="fontWeight">700</item>
  </style>

  <style name="text.title.subtitle">
    <item name="android:textSize">24sp</item>
  </style>

  <style name="text.body">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="text.body.bold">
    <item name="fontWeight">700</item>
  </style>

  <style name="text.caption">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="text.caption.bold">
    <item name="fontWeight">700</item>
  </style>

  <style name="text.title.subtitle.add_button">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:textSize">22sp</item>
    <item name="android:background">@drawable/roundedbutton</item>
    <item name="android:textColor">@color/neutralYellow</item>
  </style>

  <style name="text.caption.primary">
    <item name="android:background">@drawable/primary_button</item>
    <item name="android:textColor">@color/neutralYellow</item>
  </style>

  <style name="text.caption.secondary">
    <item name="android:background">@drawable/secondary_button</item>
    <item name="android:textColor">@color/accentDarkBlue</item>
  </style>
</resources>
